@model List<EmployeeUI.Models.Employee>
<div style="margin:20px; padding:10px; border:solid 1px teal; font-family: Calibri">
    <div style="margin:3px">Welcome</div>
    <hr />
    <div style="margin:3px; padding:5px;">
        <a type="button" asp-action="Add" class="btn btn-secondary"> Add New Employee</a>
    </div>

    <div style="margin:3px; margin-top:10px; padding:5px">
        <table class="table table-bordered">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Address</td>
                <td>Mobile</td>
                <td>Skill set</td>
                <td>Birth date</td>
                <td>Join Date</td>
                <td>Salary</td>
                <td>Department Name</td>
                <td>Edit</td>
                <td>Delete</td>


            </tr>

            @foreach (Employee e in Model)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Name</td>
                    <td>@e.Email</td>
                    <td>@e.Address</td>
                    <td>@e.Mobile</td>
                    <td>@e.Skillset</td>
                    <td>@e.DOB</td>
                    <td>@e.DOJ</td>
                    <td>@e.Salary</td>
                    <td>@e.DepartmentName</td>
                    <td><a asp-action="Edit" asp-route-id="@e.Id">Edit</a></td>
                    <td><a asp-action="Delete" asp-route-id="@e.Id">Delete</a></td>
                </tr>

            }
        </table>

    </div>
</div>
