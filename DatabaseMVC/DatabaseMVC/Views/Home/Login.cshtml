@model DatabaseMVC.Models.AppUser
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />
<div style="border:solid 1pt teal;margin:10px;padding:20px;width:50%;height:auto">
   @using (Html.BeginForm("Login"))
    {
        <div class="form-group">
            <div>Email</div>
            <div>@Html.TextBoxFor(u => u.Email, new { @class = "form-control" })</div>

        </div>
        <div class="form-group">
            <div>Password</div>
            <div>@Html.TextBoxFor(u => u.Password, new { @class = "form-control" })</div>

        </div>
        <div class="form-group">
            <div><button type="submit" class="btn btn-success">Login</button></div>
        </div>
        <div>
            <div style="color:red">@ViewBag.Message</div>
        </div>

        
    }

</div>
    

